<% if signed_in? %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
  </aside>
  <div class="span8">
    <h3>Starred</h3>
    <%= render 'shared/feed' %>
  </div>
</div>  
<% else %>
<div class="center hero-unit">
    <h1>Welcome to buybuysell.org</h1>
    <h2>
      This is a futuristic, social networking craigslist clone.
    </h2>

    <%= link_to "Sign up for Beta!", beta_signup_path, 
    class: "btn btn-large btn-primary" %>
</div>
<% end %> 